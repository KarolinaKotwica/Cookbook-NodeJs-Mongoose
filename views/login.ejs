<%- include('partials/header'); -%>
<title>Zaloguj się lub załóż nowe konto - BookToCook</title>
</head>
<body id="google_translate_element">
<%- include('partials/nav'); -%>

<div class="recipes_container">
    <div class="container login-margin-top">
        <div class="row login">

            <div class="col-md-5">

                <form role="form" class="login_form" method="post" action="/login">
                <fieldset>							
                    <h3> Zaloguj się na swoje konto: </h3>
                    <% if (userName.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <p><%= userName %> </p>
                        </div>
                        <% } %>
                    <br>

                    <div class="mb-3">
                        <input type="text" name="username" class="form-control" placeholder="Nazwa użytkownika">
                    </div>
                    <div class="mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Hasło">
                    </div>
                    <div>
                        <input type="submit" class="btn btn-md btn-light button_login" value="Zaloguj">
                    </div>
                        
                </fieldset>
                </form>	
            </div>
            
            <div class="col-md-2">
                <!-------null------>
            </div>
            
            <div class="col-md-5 register">
                <form role="form" class="login_form" method="post" action="/register">
                   <fieldset>							
                       <h3> Załóż nowe konto:</h3>
                       <% if (registrations.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <p><%= registrations %> </p>
                        </div>
                        <% } %>
                        <% if (registrations_error_username.length > 0) { %>
                            <div class="alert alert-danger" role="alert">
                                <p><%= registrations_error_username %> </p>
                            </div>
                            <% } %>
                       <br>

                        <div class="mb-3">
                           <input type="text" name="username" id="username" class="form-control" autocomplete="off" placeholder="Nazwa użytkownika">
                       </div>

                       <div class="mb-3">
                           <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                       </div>
                       <div class="mb-3">
                           <input type="password" name="password" id="password" class="form-control" autocomplete="off" placeholder="Hasło">
                       </div>
                       <!-- google  -->
                       <div class="g-recaptcha" data-sitekey="6Le5fQYdAAAAAOAT4CDfOr_zKzxRGRIe6ratUS79"></div>
                       <br>
                        <div>
                           <input type="submit" class="btn btn-light button_login" value="Zarejestruj">
                        </div>
                   </fieldset>
               </form>
           </div>
           
        </div>
    </div>
</div>
<%- include('partials/footer'); -%>